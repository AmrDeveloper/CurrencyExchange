<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rates_cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen75dp"
    android:layout_margin="@dimen/dimen5dp"
    cardview:cardCornerRadius="@dimen/dimen5dp"
    cardview:cardElevation="@dimen/dimen5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="USD" />

        <TextView
            android:id="@+id/rates_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="110.000" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>